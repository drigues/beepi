<section class="bg-pink-100 min-h-screen py-20 px-6">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-10">
    <h1 class="text-3xl font-bold text-black mb-8 text-center">Edit Profile</h1>

    <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :directory, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :directory, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-pink-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :name, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-pink-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :bio, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_area :bio, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-pink-300 focus:outline-none" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Save", class: "cursor-pointer bg-black text-white px-6 py-3 rounded-full hover:bg-gray-800 transition" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Back to Dashboard", dashboard_path, class: "text-pink-600 hover:underline" %>
    </div>
  </div>
</section>
