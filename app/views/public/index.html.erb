<div class="center-container">
  <div class="public-claim-form">
    <h1>Be epic!</h1>
    <h2>Create your Link-in-Bio free</h2>
    <%= form_with url: signup_path, method: :get, local: true do |f| %>
      <%= label_tag :directory, "beepi.cc/" %>
      <%= text_field_tag :directory, params[:directory], placeholder: "you", class: "input-lg", required: true %>
      <%= submit_tag "Claim", class: "btn btn-primary" %>
    <% end %>
    <div class="quick-links">
      <% if !logged_in? %>
        <%= link_to "Login", login_path, class: "nav-link" %>
        <%= link_to "Sign Up", signup_path, class: "nav-link" %>
      <% end %>
      
    </div>
  </div>
</div>