<section class="text-center py-20 px-6">
  <h1 class="text-4xl md:text-6xl font-extrabold text-[#d1ff00]">
    Everything you are. In one, simple link in bio.
  </h1>
  <p class="mt-6 text-lg max-w-2xl mx-auto text-white">
    Join 70M+ people using Beepicc to share everything you create, curate and sell from your social media profiles.
  </p>

  <!-- Claim Form -->
  <div class="mt-10 flex flex-col sm:flex-row justify-center items-center gap-4">
    <span class="text-white text-lg">beepi.cc/</span>
    <%= form_with url: signup_path, method: :get, local: true, class: "flex" do %>
      <%= text_field_tag :directory, params[:directory], placeholder: "yourname", class: "px-4 py-2 rounded-l-md text-black w-64 sm:w-72 focus:ring focus:ring-lime-400" %>
      <%= submit_tag "Claim", class: "bg-pink-500 hover:bg-pink-600 px-6 py-2 rounded-r-md font-bold text-white transition" %>
    <% end %>
  </div>

  <% if !logged_in? %>
    <div class="mt-6 space-x-4">
      <%= link_to "Login", login_path, class: "underline hover:text-[#d1ff00]" %>
      <%= link_to "Sign Up", signup_path, class: "underline hover:text-[#d1ff00]" %>
    </div>
  <% end %>
</section>
